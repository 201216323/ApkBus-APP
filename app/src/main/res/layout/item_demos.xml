<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_demos_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="5dp"
    android:orientation="vertical"
    app:cardCornerRadius="5dp"
    app:contentPadding="10dp">


    <TextView
        android:id="@+id/item_demos_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:textSize="18sp" />
<LinearLayout
    android:gravity="center_vertical"
    android:layout_gravity="bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/item_demos_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:failureImage="@android:drawable/ic_delete"
        app:placeholderImage="@android:drawable/ic_menu_gallery" />
    <TextView
        android:id="@+id/item_demos_nickname"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>

</android.support.v7.widget.CardView>